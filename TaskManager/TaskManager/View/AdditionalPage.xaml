<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.View.AdditionalPage"
             xmlns:viewModals="clr-namespace:TaskManager.ViewModal"
             BackgroundColor="#46529d">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add new task" HorizontalOptions="Fill"  HorizontalTextAlignment="Center" TextColor="#e0e2ee" HeightRequest="50" FontSize="18" Margin="30"/>
            <Entry WidthRequest="200" Text="{Binding NewTaskTitle}" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="#e0e2ee" Placeholder="Task"/>
            <Button Text="+" Command="{Binding AdditionTaskCommand}" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>